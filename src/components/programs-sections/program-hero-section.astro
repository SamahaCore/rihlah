---
interface Props {
    title: string;
    description: string;
    imageAlt?: string;
    imageSrc?: string;
    buttonText?: string;
    buttonLink?: string;
    textFirst?: boolean; // true = text left, false = text right
}

const { 
    title, 
    description, 
    imageAlt = "Program image",
    imageSrc = "https://placehold.co/650x400",
    buttonText = "Learn More",
    buttonLink = "#",
    textFirst = true 
} = Astro.props;

const textOrder = textFirst ? "order-2 lg:order-1" : "order-2 lg:order-2";
const imageOrder = textFirst ? "order-1 lg:order-2" : "order-1 lg:order-1";
---

<section class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 items-center">
            <!-- Text Content -->
            <div class={`flex-1 ${textOrder}`}>
                <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-700 mb-6 lg:mb-8">
                    {title}
                </h2>
                
                <div class="space-y-4 text-gray-600 text-base sm:text-lg leading-relaxed" set:html={description} />

                <div class="py-4">
                    <a href={buttonLink} class="inline-block bg-[var(--color-accent-yellow)] hover:bg-[var(--color-accent-gold)] px-6 py-3 rounded-lg text-base font-semibold text-white transition-colors">
                        {buttonText}
                    </a>
                </div>
            </div>
            
            <!-- Image Container -->
            <div class={`flex-1 ${imageOrder} w-full`}>
                <div class="bg-gray-200 rounded-lg overflow-hidden shadow-sm">
                    <img src={imageSrc} 
                         alt={imageAlt} 
                         class="w-full h-auto object-cover">
                </div>
            </div>
        </div>
    </div>
</section>

